Config { font = "xft:Ubuntu:weight=bold:pixelsize=13:antialias=true:hinting=true"
        , additionalFonts = [ "xft:Mononoki Nerd Font:pixelsize=11:antialias=true:hinting=true",
         "xft:Font Awesome 5 Free Solid:pixelsize=12", "xft:Font Awesome 5 Brands:pixelsize=12"]
        , borderColor = "black"
        , border = NoBorder
        , bgColor = "#0F111A"
        , fgColor = "#E5E9F0"
        , allDesktops = True
        , pickBroadest = True
        , position = TopW L 100
        , commands = [
                      Run Weather "LLBG" [ "--template", "<fc=#4682B4><tempC></fc>째C|<fc=#4682B4><rh></fc>%|<fc=#4682B4><pressure></fc>hPa"] 36000
                      , Run Network "enp1s0" ["-L","0","-H","32","--normal","green","--high","red"] 10
                      --, Run Network "wlp2s0" ["-L","0","-H","32","--normal","green","--high","red"] 10
                      -- cpu core temperature monitor
                      , Run CoreTemp       [ "--template" , "temp <core0>째C"
                                           , "--Low"      , "70"        -- units: 째C
                                           , "--High"     , "80"        -- units: 째C
                                           , "--low"      , "darkgreen"
                                           , "--normal"   , "darkorange"
                                           , "--high"     , "darkred"
                                           ] 50
                      , Run Volume "default" "Master" ["--template" , "vol <volume>%"] 10 
                      -- memory usage monitor
                      , Run Memory         [ "--template" ,"<fn=2>\xf233</fn> mem <usedratio>%"
                                           , "--Low"      , "20"        -- units: %
                                           , "--High"     , "90"        -- units: %
                                           , "--low"      , "darkgreen"
                                           , "--normal"   , "darkorange"
                                           , "--high"     , "darkred"
                                           ] 10
                      -- swap usage monitor
                      , Run Swap         [ "--template" ,"swap <usedratio>%"
                                           , "--Low"      , "20"        -- units: %
                                           , "--High"     , "90"        -- units: %
                                           , "--low"      , "darkgreen"
                                           , "--normal"   , "darkorange"
                                           , "--high"     , "darkred"
                                           ] 10

                      -- battery monitor
                      , Run Battery        [ "--template" , "bat <acstatus>"
                                           , "--Low"      , "10"        -- units: %
                                           , "--High"     , "80"        -- units: %
                                           , "--low"      , "darkred"
                                           , "--normal"   , "darkorange"
                                           , "--high"     , "darkgreen"

                                           , "--" -- battery specific options
                                                     -- discharging status
                                                     , "-o", "<left>%"
                                                     -- AC "on" status
                                                     , "-O", "<left>%<fc=#dAA520> (AC)</fc>"
                                           ] 50
                        , Run Kbd [ ("za" , "<fc=#ffcc00>EN</fc>") , ("il", "<fc=#8B0000>HE</fc>") ]
                        , Run Cpu ["--template" , "<fn=2>\xf108</fn>  cpu <total>%", "-L","3","-H","50","--normal","green","--high","red"] 10
                        , Run Date "<fn=2>\xf017</fn>  %a %b %_d %Y %H:%M" "date" 10
                        , Run StdinReader
                        --Audacious music player
                        , Run Com "/bin/bash" ["-c","if [ $(pidof audacious) ];then echo `audtool --current-song`;else echo -;fi"] "aud1" 10
                        , Run Com "/bin/bash" ["-c","if [ $(pidof audacious) ];then echo `audtool --current-song-output-length`;else echo -;fi"] "aud2" 10
                        , Run Com "/bin/bash" ["-c","if [ $(pidof audacious) ];then echo `audtool --current-song-length`;else echo -;fi"] "aud3" 10
                        ]
        , sepChar = "%"
        , alignSep = "}{"
        , template = " %cpu% | %coretemp% | %memory% %swap% | %enp1s0% | %default:Master% | %battery% | %kbd% | %aud1% | %aud2% | %aud3% }{<fc=#ee9a00>%date%</fc>|%LLBG%"
        }
